<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christospaspalieris.polls_client_app.Poll_Activity"
    android:background="@drawable/gradiant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/btn1_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#d9e5f3"
                android:onClick="RadioButtons_Selected" />

            <RadioButton
                android:id="@+id/btn2_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#d9e5f3"
                android:onClick="RadioButtons_Selected" />

            <RadioButton
                android:id="@+id/btn3_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="RadioButtons_Selected"
                android:textSize="14sp"
                android:textColor="#d9e5f3"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/btn4_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#d9e5f3"
                android:onClick="RadioButtons_Selected"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/btn5_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#d9e5f3"
                android:onClick="RadioButtons_Selected"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/submit_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Submit"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="57dp"
        android:background="#009a9a"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textColor="#d9e5f3"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/test_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit_result"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

</RelativeLayout>
